<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Cosmetics_Shop.Views.Objects.CartThumbnailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cosmetics_Shop.Views.Objects"
    xmlns:objects="using:Cosmetics_Shop.Views.Objects"
    xmlns:converter="using:Cosmetics_Shop.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--<UserControl.Resources>
        <converter:VNDCurrencyConverter x:Key="VNDCurrencyConverter"/>
    </UserControl.Resources>-->

    <ScrollView>
        <StackPanel Background="White"
			    Margin="20 20 0 0">
            <CheckBox x:Name="shopNameCheckBox" Content="{x:Bind ViewModel.CartThumbnail.ShopName}"/>

            <GridView>
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <objects:ProductCartThumbnailControl ViewModel="{Binding}"
                                                             />
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>
    </ScrollView>
</UserControl>