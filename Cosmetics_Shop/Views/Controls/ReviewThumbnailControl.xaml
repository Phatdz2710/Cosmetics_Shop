                <FontIcon Glyph="&#xF0EA;" Foreground="Gold" FontSize="15" />
                <FontIcon Glyph="&#xF0EA;" Foreground="Gold" FontSize="15" />
                <FontIcon Glyph="&#xF0EA;" Foreground="Gold" FontSize="15" />
            </StackPanel>
        </Grid>

