<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Cosmetics_Shop.Views.Pages.PurchasePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Cosmetics_Shop.Views.Pages"
    xmlns:objects="using:Cosmetics_Shop.Views.Objects"
    xmlns:converter="using:Cosmetics_Shop.Views.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <UserControl.Resources>
        <converter:VNDCurrencyConverter x:Key="VNDCurrencyConverter"/>
    </UserControl.Resources>

    <Grid Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
              Margin="10"
              CornerRadius="10"
              Background="White">

            <!-- Mục Lọc (theo giá) -->
            <StackPanel Grid.Row="0" Margin="10">
                <TextBlock Text="Lọc (theo giá)"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>
                <ComboBox x:Name="PriceFilterComboBox"
                  HorizontalAlignment="Stretch"
                  SelectedIndex="0">
                    <ComboBoxItem Content="Tất cả giá"/>
                    <ComboBoxItem Content="Dưới 1 triệu"/>
                    <ComboBoxItem Content="1 triệu - 5 triệu"/>
                    <ComboBoxItem Content="Trên 5 triệu"/>
                </ComboBox>
            </StackPanel>

            <!-- Mục Sắp xếp -->
            <StackPanel Grid.Row="1" Margin="10">
                <TextBlock Text="Sắp xếp"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,5"/>
                <ComboBox x:Name="SortComboBox"
                  HorizontalAlignment="Stretch"
                  SelectedIndex="0">
                    <ComboBoxItem Content="Mới nhất"/>
                    <ComboBoxItem Content="Giá tăng dần"/>
                    <ComboBoxItem Content="Giá giảm dần"/>
                    <ComboBoxItem Content="Tên sản phẩm"/>
                </ComboBox>
            </StackPanel>

            <Button Content="Xác nhận"
                    Margin="10"
                    Width="200"
                    Background="#52bf90"
                    Foreground="White"
                    HorizontalAlignment="Center"/>
        </StackPanel>

        <Grid Grid.Column="1"
              Background="#317256"
              Margin="10"
              Padding="10"
              CornerRadius="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GridView Grid.Row="0"
                      CornerRadius="10"
                      ItemsSource="{x:Bind ViewModel.ProductThumbnails}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <objects:ProductThumbnailControl Height="270"
                                                         Width="230"
                                                         ViewModel="{Binding}"/>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Trước"
                        Width="80"/>
                <TextBlock Text="1 / 1"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="10 0 10 0"/>
                <Button Content="Sau"
                        Width="80"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
